<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_location"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">




    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/heading_label"
            android:text="Location"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:id="@+id/lat_lbl"
            android:text="Lat"
            android:layout_width="54dp"
            android:layout_height="15dp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/heading_label"
            card_view:layout_constraintLeft_toLeftOf="@+id/heading_label"/>

        <TextView
            android:id="@+id/lat_txt"
            android:hint="55.0123 N"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintLeft_toRightOf="@+id/lat_lbl"
            card_view:layout_constraintTop_toTopOf="@+id/lat_lbl"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/lon_lbl"
            android:text="Lon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            card_view:layout_constraintLeft_toRightOf="@+id/lat_txt"
            android:layout_marginLeft="16dp"
            card_view:layout_constraintTop_toTopOf="@+id/lat_txt"/>

        <TextView
            android:id="@+id/lon_txt"
            android:hint="11.1230 E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            card_view:layout_constraintLeft_toRightOf="@+id/lon_lbl"
            android:layout_marginLeft="8dp"
            card_view:layout_constraintTop_toTopOf="@+id/lon_lbl"/>

        <TextView
            android:id="@+id/magn_label"
            android:text="Magnetic Declination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/lat_lbl"
            card_view:layout_constraintLeft_toLeftOf="@+id/lat_lbl"/>

        <TextView
            android:id="@+id/mag_txt"
            android:hint="-3.34Ëš"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toTopOf="@+id/magn_label"
            card_view:layout_constraintLeft_toRightOf="@+id/magn_label"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>



    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>