<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_talk_then"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >


    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/heading_label"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Then"
            android:textSize="@dimen/talk_header_text_size"
            android:padding="4dp"
            android:background="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
            android:textColor="@color/cardview_light_background"
            android:layout_marginTop="16dp"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            card_view:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/position_txt"
            android:hint="WP Name"
            android:textSize="@dimen/talk_text_size"
            android:layout_height="wrap_content"
            android:layout_width="320dp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/heading_label"
            android:layout_marginStart="16dp"
            card_view:layout_constraintLeft_toLeftOf="parent"/>


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>