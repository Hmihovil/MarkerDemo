<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_time_command"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="10dp"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">



        <TextView
            android:id="@+id/command_txt"
            android:text="Command\nExtra Line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            android:width="320dp"
            android:background="@color/cast_intro_overlay_button_background_color"
            android:textSize="18sp"/>


        <Button
            android:id="@+id/command_btn"
            android:text="OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/command_txt"
            android:layout_marginTop="16dp"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>