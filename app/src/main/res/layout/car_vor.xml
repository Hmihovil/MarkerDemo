<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_vor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">


    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/heading_label"
            android:text="VOR Coordinates"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            />

        <TextView
            android:id="@+id/vor1_txt"
            android:hint="VOR1 name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintLeft_toLeftOf="@+id/heading_label"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/heading_label"/>

        <TextView
            android:id="@+id/vor1rad_txt"
            android:hint="112˚"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            card_view:layout_constraintLeft_toRightOf="@+id/vor1_txt"
            android:layout_marginLeft="8dp"
            card_view:layout_constraintTop_toTopOf="@+id/vor1_txt"/>

        <TextView
            android:id="@+id/vor1dist_txt"
            android:hint="12 nm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            card_view:layout_constraintLeft_toRightOf="@+id/vor1rad_txt"
            android:layout_marginLeft="8dp"
            card_view:layout_constraintTop_toTopOf="@+id/vor1rad_txt"/>


        <TextView
            android:id="@+id/vor2_txt"
            android:hint="VOR2 name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintLeft_toLeftOf="@+id/vor1_txt"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/vor1_txt"/>

        <TextView
            android:id="@+id/vor2rad_txt"
            android:hint="213˚"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            card_view:layout_constraintLeft_toRightOf="@+id/vor2_txt"
            android:layout_marginLeft="8dp"
            card_view:layout_constraintTop_toTopOf="@+id/vor2_txt"/>

        <TextView
            android:id="@+id/vor2dist_txt"
            android:hint="35 nm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            card_view:layout_constraintLeft_toRightOf="@+id/vor2rad_txt"
            android:layout_marginLeft="8dp"
            card_view:layout_constraintTop_toTopOf="@+id/vor2rad_txt"/>


        <TextView
            android:id="@+id/vor3_txt"
            android:hint="VOR3 name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintLeft_toLeftOf="@+id/vor2_txt"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/vor2_txt"/>

        <TextView
            android:id="@+id/vor3rad_txt"
            android:hint="069˚"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            card_view:layout_constraintLeft_toRightOf="@+id/vor3_txt"
            android:layout_marginLeft="8dp"
            card_view:layout_constraintTop_toTopOf="@+id/vor3_txt"/>

        <TextView
            android:id="@+id/vor3dist_txt"
            android:hint="74 nm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            card_view:layout_constraintLeft_toRightOf="@+id/vor3rad_txt"
            android:layout_marginLeft="8dp"
            card_view:layout_constraintTop_toTopOf="@+id/vor3rad_txt"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>